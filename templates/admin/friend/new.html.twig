{% extends "base.html.twig" %}
{% block title "New friend " %}

{% block body %}
    {{ form_start(form) }}
    <h1>{{ friend.alias }}</h1>
    <div class="container mt-8">
        <div class="row">
            <div class="col-md-2">Alias</div>
            <div class="col-md-10">{{ form_widget(form.alias) }}</div>
        </div>
        <div class="row">
            <div class="col-md-2">URL</div>
            <div class="col-md-4">{{ form_widget(form.url) }}</div>
        </div>

        <button class="btn btn-primary">Create</button>
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}


{% endblock %}