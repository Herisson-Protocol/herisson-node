<form method="post" action="{{ path('remote_backup_delete', {'id': remote_backup.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ remote_backup.id) }}">
    <button class="btn">Delete</button>
</form>
